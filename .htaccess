# Protection du dossier jeumotif
# Configuration pour Apache

# Activer la réécriture d'URL
RewriteEngine On

# Protéger les fichiers sensibles
<FilesMatch "\.(json|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Permettre l'accès aux fichiers HTML dans /data/
<FilesMatch "\.html$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Protéger api.php des accès directs malveillants
<Files "api.php">
    # Limiter aux méthodes POST et GET uniquement
    <LimitExcept GET POST>
        Order deny,allow
        Deny from all
    </LimitExcept>
</Files>

# Désactiver le listage des répertoires
Options -Indexes

# Configuration de sécurité supplémentaire
<IfModule mod_headers.c>
    # Protection XSS
    Header set X-XSS-Protection "1; mode=block"
    
    # Empêcher l'affichage dans une iframe
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Forcer le respect du content-type
    Header set X-Content-Type-Options "nosniff"
</IfModule>

# Cache pour les fichiers statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript
</IfModule>
